<% layout('/layouts/boilerplate') -%>

<div class="container">
    <div class="row mt-4 mb-5">
        <div class="col-lg-8 offset-lg-2">
            <h1 class="section-heading mb-4">Create A New Listing</h1>
            
            <div class="card p-4 shadow-sm" style="border-radius: 1rem;">
                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="title" class="form-label fw-bold">Title</label>
                        <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required> 
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid title.
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="description" class="form-label fw-bold">Description</label>
                        <textarea name="listing[description]" class="form-control" rows="4" required placeholder="Tell potential guests what makes your place special"></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a description.
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="image" class="form-label fw-bold">Upload Image</label>
                        <input name="listing[image]" type="file" class="form-control" accept="image/*" required>
                        <div class="form-text">Upload a high-quality image of your property.</div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label for="price" class="form-label fw-bold" aria-placeholder="1500">Price (per night)</label>
                            <div class="input-group">
                                <span class="input-group-text">â‚¹</span>
                                <input name="listing[price]" type="number" class="form-control" required min="0" max="100000" required placeholder="1500">
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid price.
                            </div>
                        </div>
                        
                        <div class="col-md-8">
                            <label for="location" class="form-label fw-bold">Location</label>
                            <input name="listing[location]" type="text" class="form-control" required placeholder="City, State">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a location.
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="country" class="form-label fw-bold">Country</label>
                        <input name="listing[country]" type="text" class="form-control" required placeholder="Country">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a country.
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="/listings" class="btn btn-outline-dark px-4">
                            <i class="fa-solid fa-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-dark add-btn px-4">
                            <i class="fa-solid fa-plus me-2"></i>Add Listing
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>