<% layout("/layouts/boilerplate.ejs") %>
<link rel="stylesheet" href="/css/pages/show.css">

<div class="container listing-container">
    <div class="row justify-content-center position-relative">
        <div class="col-lg-8">
            <!-- Simple Title with fallback -->
            <h1 class="simple-title mb-4"><%= listing.title || 'Untitled Listing' %></h1>

            <!-- Main Image with validation -->
            <% 
                let imageUrl = '/images/default-listing.jpg';
                let imageAlt = 'Default listing image';
                if (listing.image && listing.image.url && typeof listing.image.url === 'string') {
                    // Basic URL validation
                    if (listing.image.url.startsWith('http') || listing.image.url.startsWith('/')) {
                        imageUrl = listing.image.url;
                        imageAlt = listing.title || 'Listing image';
                    }
                }
            %>
            <img src="<%= imageUrl %>" class="listing-image" alt="<%= imageAlt %>" onerror="this.src='/images/default-listing.jpg'">

            <!-- Listing Information -->
            <div class="listing-info">
                <!-- Owner -->
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-user"></i> Host
                    </div>
                    <div class="info-value owner-name">
                        <%= listing.owner && listing.owner.username ? listing.owner.username : 'Unknown Host' %>
                    </div>
                </div>

                <!-- Price -->
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-tag"></i> Price
                    </div>
                <div>
                    <% 
                        let displayPrice = '0';
                        try {
                            displayPrice = listing.price ? Number(listing.price).toLocaleString("en-US") : '0';
                        } catch (e) {
                            console.error('Price formatting error:', e);
                        }
                    %>
                    â‚¹<%= displayPrice %> per night
                </div>
                </div>

                <!-- Location -->
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-map-marker-alt"></i> Location
                    </div>
                    <div class="location-text">
                        <%= listing.location || 'Location not specified' %>, <%= listing.country || 'Country not specified' %>
                    </div>
                </div>

                <!-- Description -->
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-info-circle"></i> Description
                    </div>
                    <div class="description-text">
                        <%= listing.description || 'No description available' %>
                    </div>
                </div>
                
                <!-- Owner Actions - Only show if current user is the owner -->
                <% if(currUser && listing.owner && currUser._id && listing.owner._id && currUser._id.equals(listing.owner._id)) { %>
                <div class="owner-actions mt-4 pt-3 border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-tools me-2"></i>Owner Options</h5>
                        <div class="btn-group">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit me-1"></i> Edit
                            </a>
                            <a href="/listings/<%= listing._id %>/report" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-chart-bar me-1"></i> View Report
                            </a>
                            <form class="d-inline" action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>

            <!-- Reviews Section -->
            <div class="reviews-section">
                <h2 class="reviews-title">Guest Reviews</h2>

                <!-- Reviews List -->
                <% if(listing.reviews && listing.reviews.length > 0) { %>
                    <% for(let review of listing.reviews) { %>
                        <div class="review-card">
                            <div class="review-header d-flex justify-content-between align-items-center mb-2">
                                <h5 class="reviewer-name mb-0">
                                    <%= review.author && review.author.username ? review.author.username : 'Anonymous' %>
                                </h5>
                                <div class="review-actions">
                                    <% if(currUser && review.author && review.author.equals && review.author.equals(currUser._id)) { %>
                                        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" 
                                            method="POST" class="d-inline">
                                            <button class="delete-review-btn">
                                                <i class="fas fa-trash-alt me-1"></i> Delete
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                            <div class="star-rating">
                                <% for(let i = 0; i < review.rating; i++) { %>
                                    <i class="fas fa-star"></i>
                                <% } %>
                            </div>
                            <p class="review-text truncated" data-review-id="<%= review._id %>"><%= review.comment %></p>
                        </div>
                    <% } %>
                <% } else { %>
                    <p class="text-muted">No reviews yet.</p>
                <% } %>
                <!-- Review Form -->
                <% if(currUser) { %>
                    <% if(currUser._id && listing.owner && !currUser._id.equals(listing.owner._id)) { %>
                        <div class="review-form">
                            <h3>Write a Review</h3>
                            <form action="/listings/<%= listing._id %>/reviews" method="POST">
                                <div class="rating-group">
                                    <% for(let i = 1; i <= 5; i++) { %>
                                        <button type="button" class="rating-btn" data-rating="<%= i %>">
                                            <%= i %> <i class="fas fa-star"></i>
                                        </button>
                                        <input type="radio" name="review[rating]" value="<%= i %>" hidden>
                                    <% } %>
                                </div>
                                <textarea class="review-textarea" name="review[comment]" 
                                        placeholder="Share your experience..." required></textarea>
                                <button type="submit" class="submit-btn mt-2">Submit Review</button>
                            </form>
                        </div>
                    <% } else if(currUser._id && listing.owner && currUser._id.equals(listing.owner._id)) { %>
                        <div class="alert alert-info text-center mt-4">
                            <i class="fas fa-info-circle me-2"></i>
                            You cannot review your own listing
                        </div>
                    <% } %>
                <% } else { %> 
                    <div class="text-center mt-4">
                    <a href="/login" class="btn btn-outline-dark rounded-pill px-4">Log in to write a review</a>
                    </div>
                <% } %>
                <div class="text-center mt-4">
                    <a href="/listings" class="btn btn-outline-dark rounded-pill px-4">Back to All Listings</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/show.js"></script>